<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>messages</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>configs</base-name>
            <var>configs</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/MyBundle2</base-name>
            <var>myBundle2</var>
        </resource-bundle>
    </application>

<!-- FIM da Configuração TRT23 -->        
<!--
    interceptação de exception extraída do JSF 2.0 do Ed Burns
    <factory>
        <exception-handler-factory>
            br.jus.trt23.contavinculada.factories.ExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
-->
</faces-config>
